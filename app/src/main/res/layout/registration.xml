<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/registration_activity"
    android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="50dp"
            app:contentPadding="10dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="10dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:gravity="center"
            android:textSize="35dp"
            android:layout_marginBottom="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="15dp"/>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Following"
                android:layout_marginStart="60dp"
                android:id="@+id/follower_Cb"/>



        <EditText
            android:id="@+id/firstNameInput_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@android:color/black"
            android:hint="@string/EnterYourFirstName"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/lastNameInput_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@android:color/black"
            android:hint="@string/EnterYourLastName"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/emailInput_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@android:color/black"
            android:hint="@string/EnterYourMail"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/phoneNumberInput_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@android:color/black"
            android:hint="@string/EnterAPhoneNumber"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/child_phoneNum_Et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@android:color/black"
            android:hint="הכנס מספר טלפון של הנעקב"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        <EditText
            android:id="@+id/passwordInput_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@android:color/black"
            android:hint="@string/EnterYourPassword"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/createUserBtn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/CreateANewUser"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />



</LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>